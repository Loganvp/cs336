body
    font: 24px Helvetica
    background: #999999


a  color: black
:hover color: white

#main
    min-height: 800px
    margin: 0px
    padding: 0px
    //border: 8px solid
    display: flex
    flex-flow: row


#main > article
    //margin: 4px
    padding: 15px
    border: 8px double
    text-align: center
    //border: 1px solid #cccc33
    //border-radius: 7pt
    background: lightblue
    flex: 3 1 60%
    order: 2


#main > nav
    //margin: 4px
    padding: 5px
    border: 8px double
    //border: 1px solid #8888bb
    //border-radius: 7pt
    text-align: right
    background: #006994

    flex: 1 6 20%
    order: 1


#main > aside
    //margin: 4px
    padding: 5px;
    border: 8px double
    //border: 1px solid #8888bb
    //border-radius: 7pt
    background: #006994
    flex: 1 6 20%
    order: 3


header, footer
    display: block
    font-size: 80%
    font-style: italic
    //margin: 4px
    padding: 5px
    min-height: 100px
    border: 8px double
    //border: 1px solid #eebb55
    //border-radius: 7pt
    background: #ffeebb

header
  font-size: 200%
  font-style: normal
  font-weight: bold
  text-align: center


/* Too narrow to support three columns */
@media all and (max-width: 640px)
    #main, #page
        flex-direction: column


    #main > article, #main > nav, #main > aside
    /* Return them to document order */
        order: 1


    #main > nav, #main > aside, header, footer
        min-height: 50px
        max-height: 50px

    #main > nav
      text-align: left
      order: 0
