body
  font: 24px Helvetica
  font-family: 'Helvetica Neue', 'Helvetica', 'Lucida Grande', 'Arial', sans-serif
  background: #646464

header
  display: block
  font-family: 'Helvetica Neue', 'Helvetica', 'Lucida Grande', 'Arial', sans-serif
  font-size: 50px
  color: #ffffff
  line-height: 100px
  min-height: 100px
  padding-left: 20px
  border: 1px solid #ffffff
  background: #3882C7

footer
  display: block
  font-size: 12px
  color: #ffffff
  padding: 5px
  min-height: 10px
  border: 1px solid #000
  background: #3882C7

.instructions
  font-style: bold
  font-size: 20px
  color: #3882C7
  text-align: center

.mainWindow
  background-color: #fafafa
  width: 100%
  margin: auto

.initialPage
  display: flex
  flex-flow: row wrap

.votingBox
  padding: 15px
  background: #fafafa
  border: 1px solid #000
  flex: 100%
  order: 1


.result

.resultsBox
  padding: 15px
  background: #c8c8c8
  border: 1px solid #000
  flex: 100%
  order: 2


.squadListA
  padding: 5px
  border: 1px solid #000
  flex: 1 1 90%
  order: 1

.squadron


.squadronForm
  align-self: center


.squadronForm input[type=number]
  max-width: 40px
  height: 40px
  margin: 30px
  font-size: 20px
  flex: 10%
  order: 1


.squadronForm input[type=submit]
  background-color: #4CAF50
  border: 2px solid
  border-radius: 5px
  color: white
  text-align: center
  text-decoration: none
  display: inline-block
  cursor: pointer

  height: 40px
  margin: 30px
  font-size: 20px
  order: 2


.navBar
  text-align: center
  height: 40px
  width: 100%
  padding-bottom: 10px
  border: 1px solid #ffffff
  flex: 1 6 20%
  order: 1


.navBar ul
  list-style-type: none
  margin: 0
  padding: 0
  background-color: #000000
  vertical-align: middle

.navBar li, a, a:visited
  display: inline
  font-size: 100%
  color: #ffffff
  height: 20px
  padding: 15px 25px




@media all and (max-width: 640px)
  body
    min-width: 350px

  .initialPage
    flex-flow: column

  .squadronbox
    order: 1

  .resultsBox
    order: 2


  .navBar
    min-height: 50px
    max-height: inherit


  .navBar ul
    min-height: inherit
    max-height: inherit

  .navBar li
    text-decoration: underline
    display: inline-block
    padding: 2px 2px
    min-height: inherit
    max-height: inherit


  footer
    text-align: left
    min-height: inherit
    max-height: inherit


  header
    font-size: 30px
    min-height: inherit
    max-height: inherit
    line-height: 50px
    text-align: center
